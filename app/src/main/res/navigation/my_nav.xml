<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/mainActivity">


    <fragment
        android:id="@+id/mainActivity"
        android:name="com.exotic.kotlinassignment.views.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" >
        <action
            android:id="@+id/action_mainActivity_to_newsDetailActivity"
            app:destination="@id/newsDetailActivity" />
    </fragment>
    <fragment
        android:id="@+id/newsDetailActivity"
        android:name="com.exotic.kotlinassignment.views.NewsDetailActivity"
        android:label="activity_news_detail"
        tools:layout="@layout/activity_news_detail" />
</navigation>